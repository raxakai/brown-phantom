---
interface Props {
  title: string;
  intro: string;
  href: string;
  cardImage?: string;
  youtubeId?: string;
  date: Date;
  isArchive?: boolean;
  isTool?: boolean;
}

const { title, intro, href, cardImage, youtubeId, date, isArchive, isTool } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
});

// Determine card image source
const imageSrc = youtubeId
  ? `https://img.youtube.com/vi/${youtubeId}/maxresdefault.jpg`
  : cardImage;
---

<article class="card">
  <a href={href} class="card__link">
    <div class="card__media">
      {imageSrc ? (
        <img src={imageSrc} alt="" class="card__image" loading="lazy" />
      ) : (
        <div class="card__placeholder">
          <span class="card__placeholder-icon">{isTool ? '>' : '#'}</span>
        </div>
      )}
      {youtubeId && (
        <div class="card__play-icon">
          <svg viewBox="0 0 24 24" fill="currentColor" width="32" height="32">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
      )}
    </div>

    <div class="card__content">
      <div class="card__meta">
        <span class="card__date">{formattedDate}</span>
        {isArchive && <span class="card__badge">Archive</span>}
        {isTool && <span class="card__badge card__badge--tool">Tool</span>}
      </div>

      <h3 class="card__title">{title}</h3>
      <p class="card__intro">{intro}</p>

      <span class="card__cta">
        {isTool ? 'Try' : 'Read'} <span class="card__arrow">&rarr;</span>
      </span>
    </div>
  </a>
</article>

<style>
  .card {
    background: var(--bg-card);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    border: 1px solid var(--border);
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    background: var(--bg-card-hover);
  }

  .card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card__media {
    position: relative;
    aspect-ratio: 16 / 9;
    background: var(--bg-secondary);
    overflow: hidden;
  }

  .card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .card:hover .card__image {
    transform: scale(1.03);
  }

  .card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-card) 100%);
  }

  .card__placeholder-icon {
    font-family: var(--font-mono);
    font-size: 2rem;
    color: var(--border-light);
  }

  .card__play-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.7);
    border-radius: 50%;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: background 0.2s, transform 0.2s;
  }

  .card:hover .card__play-icon {
    background: var(--accent);
    transform: translate(-50%, -50%) scale(1.1);
  }

  .card__content {
    padding: var(--space-lg);
  }

  .card__meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .card__date {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .card__badge {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 2px 6px;
    background: var(--border);
    color: var(--text-secondary);
    border-radius: 3px;
  }

  .card__badge--tool {
    background: var(--accent);
    color: var(--bg-primary);
  }

  .card__title {
    font-family: var(--font-serif);
    font-size: 1.2rem;
    font-weight: 400;
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .card__intro {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card__cta {
    font-size: 0.85rem;
    color: var(--accent);
    font-weight: 500;
  }

  .card__arrow {
    display: inline-block;
    transition: transform 0.2s;
  }

  .card:hover .card__arrow {
    transform: translateX(4px);
  }
</style>
